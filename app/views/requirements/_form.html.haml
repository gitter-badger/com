- url = @requirement.new_record? ? mission_deliverable_requirements_path(@deliverable.mission, @deliverable, { action: :create }) : mission_deliverable_requirement_path(@deliverable.mission, @deliverable, @requirement)
= form_for(@requirement, { url: url }) do |f|
  - if @requirement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@requirement.errors.count, "error")} prohibited this requirement from being saved:"
      %ul
        - @requirement.errors.full_messages.each do |msg|
          %li= msg

  .fill-me-in
    = f.label(:name)
    = f.text_field(:name, { required: true, autofocus: true })

  .fill-me-in
    = f.label(:description)
    = f.text_field(:description)

  .fill-me-in
    = f.label(:estimate)
    = f.number_field :estimate, :step => 1

  .actions
    = f.submit 'Save'
